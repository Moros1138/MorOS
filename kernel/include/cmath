// <cmath> -*- C++ -*-
#ifndef _CPP_CMATH
#define _CPP_CMATH

#include "math.h"

#undef abs
#undef atan
#undef atan2
#undef ceil
#undef cos
#undef floor
#undef mod
#undef pow
#undef sin
#undef sqrt
#undef tan
#undef trunc

namespace std
{
    inline double abs(double x)             { return fpu_abs(x);       }
    inline double atan(double x)            { return fpu_atan(x);      }
    inline double atan2(double y, double x) { return fpu_atan2(y, x);  }
    inline double ceil(double x)            { return fpu_ceil(x);      }
    inline double cos(double x)             { return fpu_cos(x);       }
    inline double floor(double x)           { return fpu_floor(x);     }
    inline double mod(double x, double y)   { return fpu_modulo(x, y); }
    inline double pow(double x, double y)   { return fpu_pow(x, y);    }
    inline double sin(double x)             { return fpu_sin(x);       }
    inline double sqrt(double x)            { return fpu_sqrt(x);      }
    inline double tan(double x)             { return fpu_tan(x);       }
    inline double trunc(double x)           { return fpu_trunc(x);     }
}

#endif // _CPP_CMATH